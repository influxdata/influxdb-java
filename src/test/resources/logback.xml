<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <conversionRule conversionWord="wex" converterClass="org.influxdb.WhitespaceConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%5p] [%15.15t] %-40.40logger{39} : %m%n%wex</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT-ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT-ASYNC"/>
    </root>


    <logger name="org.influxdb" level="DEBUG"/>
</configuration>